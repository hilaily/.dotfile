[user]
    name = Laily
    email = i@laily.net
[core]
    autocrlf = input
    quotepath = false
    editor = /usr/local/bin/nvim
    excludesfile = ~/.dotfile/git/.gitignore
[alias]
    au = add -u
    co = checkout
    cm = commit -m
    st = status
    ap = add -p
    br = branch
    pl = pull
    pt = push origin --tags
    merge2 = "!f() { git checkout $1 && git merge $2 && git checkout -; }; f"
    bg = "!f() { git branch | grep $1; }; f"
    delbr = "!f(){ git branch -D $(git branch | grep \"\b$1\"); };f"
    can = commit --amend --no-edit
    cleanbr = "!git branch --merged master | grep  -v '\\*\\|master\\|main' | xargs -n 1 git branch -d"
[push]
    default = current
[merge]
    tool = vimdiff
[include]
    path = ~/.subgitconfig
[branch]
	autoSetupMerge = always
